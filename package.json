{
  "name": "user-registration-system",
  "version": "1.0.0",
  "description": "Complete User Registration System with NestJS backend and React frontend",
  "scripts": {
    "install:all": "npm install --prefix backend && npm install --prefix frontend",
    "start:backend": "npm run start:dev --prefix backend",
    "start:frontend": "npm start --prefix frontend",
    "start:dev": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "build:backend": "npm run build --prefix backend",
    "build:frontend": "npm run build --prefix frontend",
    "build:all": "npm run build:backend && npm run build:frontend",
    "test:backend": "npm run test --prefix backend",
    "test:frontend": "npm run test --prefix frontend",
    "lint:backend": "npm run lint --prefix backend",
    "lint:frontend": "npm run lint --prefix frontend",
    "deploy": "./deploy.sh"
  },
  "keywords": [
    "nestjs",
    "react",
    "typescript",
    "user-registration",
    "authentication",
    "sqlite",
    "tailwindcss"
  ],
  "author": "IA03 Assignment",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
